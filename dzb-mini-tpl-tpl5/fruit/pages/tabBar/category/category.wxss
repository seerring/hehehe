}

.contentBox {
  position: fixed;
  top: 120rpx;
  /* bottom:0rpx; */
  left: 0;
  /* z-index:99; */
  width: 100%;
  height: calc(100% - 90rpx);
  background-color: #f4f4f4;
}

.contentBox .tabList .fixed {
  position: fixed;
  width: 146rpx;
  height: 30rpx;
