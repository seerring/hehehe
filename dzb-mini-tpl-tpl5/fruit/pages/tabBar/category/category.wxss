/* 筛选搜索列表的样式 */
.searchTabList{
  width: 516rpx;
  top: 0;
  left: 234rpx;
  z-index: 10000;
}
.searchTabList .searchList-item {
  margin-left: 39rpx;
}

.searchTabList .searchList-item:first-child{
   margin-left: 26rpx;
}
.searchTabList .searchList-item:last-child{
     padding-right:0rpx;
}

