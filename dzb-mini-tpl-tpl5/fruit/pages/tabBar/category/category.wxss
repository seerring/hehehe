  width: 28rpx;
  height: 28rpx;
  margin-left: 20rpx;
  margin-top: 30rpx;
}
/* 下拉列表的选项框 */
.select_box {
  top: 88rpx;
  width: 234rpx;
  box-shadow: 4rpx 12rpx 20rpx -2rpx rgba(142, 142, 142, 4);
  overflow: hidden;
