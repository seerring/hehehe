      width: 17rpx;
      height: 26rpx;
}
.searchTabList .arrowBox .sx-arrow-down{
     border-top:10rpx solid #999; 
     border-left:10rpx solid  transparent; 
     border-right:10rpx solid transparent;
     width:0rpx;
     height:0rpx; 
}
.sx-arrow-down1{
     border-bottom:10rpx solid #1ccfcf !important;
}
.searchTabList .arrowBox .sx-arrow-up{
     border-bottom:10rpx solid #999; 
     border-left:10rpx solid  transparent; 
     border-right:10rpx solid transparent;
     width:0rpx;
     height:0rpx;
}
.sx-arrow-up1{
     border-top:10rpx solid #1ccfcf !important;
}