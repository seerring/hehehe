.list-item{
  width: 335rpx;
  padding-bottom: 20rpx;
}
.group .groupBox .proList .list-item .leftCont {
  width: 335rpx;
}
.group .groupBox .proList .list-item .leftCont image {
  width: 335rpx;
  height: 335rpx;
}
/* 限量特价加入购物车小图标 */
.addCarIcon{
  margin-left: 165rpx;
  width: 50rpx;
  height: 50rpx;
  bottom:25rpx;
  right:13rpx;
}
.joinGroup {
  border: 2rpx solid #FC5920;
  border-radius: 20rpx;
}
.joinGroup2 {
  border: 2rpx solid #999;
  border-radius: 20rpx;
}
.group .groupBox .proList .list-item .leftCont .sale_null {
  width: 110rpx;
  height: 110rpx;
  background: rgba(0, 0, 0, 0.3);
  bottom: 55rpx;
  left: 55rpx;
  font-family: 'PingFang-Medium';
}
.group .groupBox .proList .list-item .leftCont .qh_time {
  width: 220rpx;
  background: rgba(0, 0, 0, 0.3);
  bottom: 0;
  font-family: 'PingFang-Medium';
}
.group .groupBox .proList .list-item .rightCont {
  width: 303rpx;
  font-family: 'PingFang-Medium';
}
.group .groupBox .proList .list-item .rightCont .title text {
  vertical-align: middle;
}
.group .groupBox .proList .list-item .rightCont .title :last-child {
  display: inline;
}
.group .groupBox .proList .list-item .rightCont .limit .dian {
  margin-right: 4rpx;
  width: 10rpx;
  height: 10rpx;
  background: #ccc;
}
.group .groupBox .proList .list-item .rightCont .end_time text.times {
  
}
.group .groupBox .proList .list-item .rightCont .end_time text.dian {
  margin: 0 5rpx;
}
.group .groupBox .proList .list-item .rightCont .price {
  font-family: 'PingFang-Bold';
  width: 303rpx;
}
.group .groupBox .proList .list-item .rightCont .price view.joinGroup {
  border: 2rpx solid #FC5920;
  border-radius: 20rpx;
}
.group .groupBox .proList .list-item .rightCont .price view.joinGroup2 {
  border: 2rpx solid #999;
  border-radius: 20rpx;
}
.group .groupBox .loadMore {
  padding: 30rpx 0 20rpx 0;
}
.group .groupBox .loadMore image {
  width: 120rpx;
  height:80rpx;
  margin: 0 auto;
}
.good_box {
  width: 60rpx;
  height: 60rpx;
  position: fixed;
  border-radius: 50%;
  overflow: hidden;
  left: 50%;
  top: 50%;
  z-index: 99;
  border: 1px solid rgba(187, 49, 40, 0.61);
  background: rgba(230, 15, 15, 0.966);
}
.good_box image {
  display: block;
  width: 100%;
  height: 100%;
}