/* pages/tabBar/activity/activity.wxss */

.group {
  min-height: calc(99.12vh);
}
.group /deep/ .vux-header {
  border-bottom: 0px;
}
.group .groupBox {
  /*height:calc(100vh - 1.86rem);
            overflow-y:scroll;*/
  padding-bottom: 98rpx;
}
.group .groupBox .storeInfo {
  width: 100%;
  height: 290rpx;
  /* padding-top: 30rpx; */
}

.group .groupBox .storeInfo .storeBox {
  font-family: 'PingFang-Medium';
  margin-top: -40rpx;
}
.group .groupBox .storeInfo .storeBox .leftCont {
  margin: 0 auto;
}
.group .groupBox .storeInfo .storeBox .leftCont image {
  width: 120rpx;
  height: 120rpx;
}
.group .groupBox .storeInfo .storeBox .rightCont {
  display: flex;
  flex-direction: column;
  /* justify-content: space-between; */
}
/* 题头店址样式 */
.storeAddress{
  margin: 14rpx auto;
}
.group .groupBox .storeInfo .storeBox .rightCont .address view {
  width: 8%;
}
.group .groupBox .storeInfo .storeBox .rightCont .address view image {
  width: 30rpx;
  height: 38rpx;
}
.group .groupBox .storeInfo .storeBox .rightCont .address view {
  width: 92%;
}
.group .groupBox .tabList {
  font-family: 'PingFang-Medium';
  background-color: #f4f4f4;
  border-top-left-radius: 40rpx;
  border-top-right-radius: 40rpx;
  width: 100%;
  top: 254rpx;
}
.group .groupBox .tabList text {
  display: inline-block;
  text-align:center;
}
.selected {
  color: rgb(28, 207, 207);
  font-size: 36rpx;
}
.group .groupBox .tabList .line {
  border-right: 2rpx solid #eee;
}
.group .groupBox .tabList .rentOut,
.group .groupBox .tabList .sell {
  width: 40%;
}
/* 商品左右列的样式 */
.leftList, .rightList{
  width: 335rpx;
}
.leftList{
  margin-left: -5rpx;
}
.rightList{
  margin-left: 20rpx;
}
/* 会员折扣 */
.ptVip,.tgVip{
  width: 335rpx;
  height: 136rpx;
  margin-bottom: 20rpx;
}
.ptVip image, .tgVip image{
  width: 100%;
  height: 100%;
}
.ptVip{
   margin-left: 355rpx;
}
/* 充值有礼 */
.tgVip{
  margin-right: 355rpx;
}
/* 限时拼团 */
.ptGoodsListItem{
  width: 335rpx;
}
.list-item_1:nth-of-type(2n-1){
  position: relative;
  top: -155rpx;
  left: 20rpx;
  /* border: 1px solid; */
}
