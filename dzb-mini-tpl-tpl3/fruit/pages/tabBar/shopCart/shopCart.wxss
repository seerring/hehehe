/* pages/tabBar/shopCart/shopCart.wxss */
.topCheckAll checkbox{
     width:0rpx;
     height:0rpx;
}
.topCheckAll .text{
     margin-left:68rpx;
     vertical-align:middle;
}
.goodsList{
     border-top:2rpx solid #f8f8f8;
}
.goodsList .list-item .proImg,
.goodsList .list-item .proImg image{
     width:180rpx;
     height:180rpx;
}
.goodsList .list-item .proDesc{
     width:614rpx;
}
.goodsList .list-item .rightCont{
     width:400rpx;
}
.goodsList .list-item .delete{
     width:30rpx;
     height:30rpx;
}
.goodsList .list-item .buyCount{
     height:50rpx;
     line-height:50rpx;
}
.goodsList .list-item .buyCount .price{
     color:#d31006;
}
.goodsList .list-item .buyCount .chooseBox{
     width:175rpx;
     height:50rpx;
     line-height:48rpx;
     border:1rpx solid #eeeeee;
     border-radius:4rpx;
     box-sizing:border-box;
}
.goodsList .list-item .buyCount .chooseBox text{
     width:33.333333%;
}
.goodsList .list-item .buyCount .chooseBox text:nth-child(1),
.goodsList .list-item .buyCount .chooseBox text:nth-child(2){
     border-right:1rpx solid #eeeeee;
     box-sizing:border-box;
}
.forRecommend{
     margin-bottom:100rpx;
}
.forRecommend .head{
     padding:40rpx 0;
}
.forRecommend .head image{
     width:33rpx;
     height:14rpx;
     vertical-align:middle;
}
.recomLists .list-item{
     width:340rpx;
     height:470rpx;
}
.recomLists .recomImg,
.recomLists .recomImg image{
     width:340rpx;
     height:340rpx;
}
.recomLists .recomImg .backLove{
     width:152rpx;
     height:42rpx;
     line-height:42rpx;
     background:#FEA980;
     bottom:0;
     border-radius:0 22rpx 22rpx 0;
}
.recomLists .list-item:nth-child(2n){
     margin-left:10rpx;
}
.recomLists .list-item .proDesc{
     padding-left:16rpx;
     width:324rpx;
}
.recomLists .list-item .joinCart{
     padding-left:16rpx;
     width:324rpx;
     line-height:40rpx;
}
.recomLists .list-item .joinCart image{
     width:40rpx;
     height:40rpx;
}
.backTop{
     position:fixed;
     right:30rpx;
     bottom:66rpx;
}
.backTop,
.backTop image{
     width:54rpx;
     height:54rpx;
}
.toOrder{
     position:fixed;
     width:100%;
     bottom:0;
     z-index:99;
}
.toOrder .payBtn{
     width:200rpx;
     background:#cccccc;
}
.active{
     background:#1ccfcf!important;
}
.nullStyle{
     width:100%;
     height:304rpx;
     margin-top:200rpx;
}
.nullStyle image{
     width:335rpx;
     height:304rpx;
}
.null-title{
     margin-top:60rpx;
}
.toIndex{
     width:216rpx;
     border-radius:4rpx;
}
.flex { 
    flex-wrap:nowrap !important; 
}